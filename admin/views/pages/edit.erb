<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to pat(:list), url(:pages, :index) %></li>
      <li><%= link_to pat(:new), url(:pages, :new) %></li>
      <li class="active"><%= link_to pat(:edit), url(:pages, :edit, :id => @page.id) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:edit) %> <% mt(:page) %></h2>
    <div class="inner">
      <% form_for :page, url(:pages, :update, :id => @page.id), :method => :put, :class => :form do |f| %>
        <%= partial "pages/form", :locals => { :f => f } %>
      <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
